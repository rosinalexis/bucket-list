{% extends 'base.html.twig' %}

{% block title %}Bucket list admin
{% endblock %}

{% block body %}


	<h1 class="text-center text-dark my-5 text-uppercase">
		TP Bucket-List | Admin zone</h1>


		<h1 class="text-center pt-5 pb-3">#Demo## Mon tableau de wishes</h1>

	<div class="row">
		<div class="col-md-10 mx-auto">
			<table class="table">
				<thead class="table-primary">
					<tr>
						<th>#</th>
						<th>Title</th>
						<th>Description</th>
						<th>Categorie</th>
						<th>Date de creation</th>
						<th>Afficher</th>
						<th>Modifier</th>
						<th>Supprimer</th>
					</tr>
				</thead>
				<tbody>
					{%  for  wish in wishes %}
						<tr>
							<td>{{wish.id}}</td>
							<td>{{wish.title}}</td>
							<td>{{wish.description}}</td>
							<td>{{wish.category.name}}</td>
							<td>{{wish.dateCreated|date('Y/m/d')}}</td>
							<td>
								<a href="{{path('app_wish_afficher',{id:wish.id})}}" class="btn btn-primary">Afficher</a>
							</td>
							<td>
								<a href="{{path('app_wish_modifier',{id:wish.id})}}" class="btn btn-warning">Modifier</a>
							</td>
							<td>
								<a href="{{path('app_wish_supprimer',{id:wish.id})}}" class="btn btn-danger">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<div class="mt-5">
		<form action="{{path('app_wish_ajouter_rapide')}}" method="POST">
			<div class="row">
				<div class="mb-3 col-md-10 mx-auto">
					<label for="titre" class="form-label">Ajouter une wish rapide:</label>
					<input type="text" class="form-control" id="titre" placeholder="Titre de la wish" name='titre'>
					<button type="submit" class="btn btn-primary my-4 mx-auto">Ajout une wish</button>
				</div>
			</div>
			
		</form>
	</div>

{% endblock %}
