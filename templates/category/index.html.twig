{% extends 'base.html.twig' %}

{% block title %}Liste Des Categories!
{% endblock %}

{% block body %}
	<h1 class="text-center pt-5 pb-3">#Mon tableau de Categories</h1>

	<div class="row">
		<div class="col-md-10 mx-auto">
			<table class="table">
				<thead class="table-primary">
					<tr>
						<th>Title</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{%  for  category in categories %}
						<tr>
							<td>{{category.name}}</td>
							<td>
								<a href="{{path('app_category_show',{id:category.id})}}" class="btn btn-primary">Afficher</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<a href="{{path('app_category_add')}}" class="text-center">Ajouter une cat√©gorie</a>
{% endblock %}
